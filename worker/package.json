{
  "name": "nodejs-messaging-work-queue-worker",
  "version": "3.0.1",
  "description": "A sample Node.js app that processes requests",
  "license": "Apache-2.0",
  "scripts": {
    "test": "tape test/*.js | tap-spec",
    "lint": "xo",
    "coverage": "nyc npm test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "ci": "npm run lint && npm run coveralls",
    "prepublish": "license-reporter report -s",
    "openshift": "nodeshift --dockerImage=registry.access.redhat.com/ubi8/nodejs-12",
    "postinstall": "license-reporter report -s && license-reporter save -s --xml licenses.xml",
    "start": "node ."
  },
  "main": "./bin/www",
  "xo": {
    "space": 2,
    "rules": {
      "space-before-function-paren": [
        "error",
        "always"
      ],
      "camelcase": [
        "off"
      ],
      "prefer-destructuring": [
        "off"
      ]
    },
    "ignores": [
      "public/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nodeshift-starters/nodejs-messaging-work-queue.git"
  },
  "files": [
    "package.json",
    "app.js",
    "bin",
    "LICENSE",
    "licenses"
  ],
  "bugs": {
    "url": "https://github.com/nodeshift-starters/nodejs-messaging-work-queue/issues"
  },
  "homepage": "https://github.com/nodeshift-starters/nodejs-messaging-work-queue",
  "dependencies": {
    "body-parser": "~1.19.0",
    "debug": "^4.2.0",
    "express": "~4.17.1",
    "kube-probe": "~0.4.0",
    "license-reporter": "~1.3.0",
    "rhea": "^1.0.0"
  },
  "devDependencies": {
    "nodeshift": "~6.2.0",
    "xo": "~0.25.3"
  }
}
